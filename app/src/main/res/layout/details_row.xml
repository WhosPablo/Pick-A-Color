<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/color_relative_layout_root"
    android:layout_margin="4dp"
    >

    <TextView
        android:id="@+id/detail_preview"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/color_name"
        android:text="@string/color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/detail_preview"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/rgb_hex_code"
        android:text="@string/rgb_hex_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:paddingTop="2dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        android:layout_below="@id/color_name"
        android:layout_toEndOf="@id/detail_preview"
        android:textSize="12sp"/>

</RelativeLayout>